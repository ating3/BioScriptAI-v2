{
  "manifest_version": 3,
  "name": "BioScriptAI v2.0",
  "version": "2.0.0",
  "description": "Context-aware academic paper assistance with persistent sidebar",
  "permissions": [
    "storage",
    "tabs",
    "sidePanel",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.zotero.org/*",
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "src/sidebar/sidebar.html"
  },
  "action": {
    "default_title": "Open BioScriptAI",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/sidebar/*", "src/content/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "src/options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
